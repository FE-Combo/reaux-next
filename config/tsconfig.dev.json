{
  "compilerOptions": {
    "baseUrl": "../",
    "target": "ES2015",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
